# Dir navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ~='cd ~'
alias ll='tree --dirsfirst -ChFupDaL 1'
alias ls='ls -a'

# weinre
alias weinre='java -jar ~/weinre.jar --boundHost=-all-'

# apache
alias a2stop="sudo apachectl stop"
alias a2start="sudo apachectl start"
alias a2restart="sudo apachectl graceful"

# vim
alias vim="/Applications/MacVim.app/Contents/MacOS/Vim"
alias gvim="mvim"
alias vimdiff="vim -d"

# git
alias gs="git status"
alias gp="git pull && fact"

# Utilities
alias a="ack -ia"
alias d="du -h -d=1"
alias df="df -h"
alias h="history"
alias httpdump="sudo tcpdump -i en1 -n -s 0 -w - | grep -a -o -E \"Host\: .*|GET \/.*\""
alias ip="curl -s http://checkip.dyndns.com/ | sed 's/[^0-9\.]//g'"
alias localip="ipconfig getifaddr en1"
alias flush="dscacheutil -flushcache"
alias fact="elinks -dump randomfunfacts.com | sed -n '/^| /p' | tr -d \|"
